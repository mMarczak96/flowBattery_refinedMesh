FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      electrolyte_potential;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 2 -3 0 0 -1 0];

internalField   uniform 0;

boundaryField
{
    #include "$FOAM_CASE/include/setConstraintTypes"

    inlet_negative_electrode
    {
        // This should be changed as the gradient of concentrations
        // is not zero on the inlet boundary
        type            zeroGradient;
    }
    inlet_positive_electrode
    {
        type            zeroGradient;
    }
    outlet_negative_electrode
    {
        type            zeroGradient;
    }
    outlet_positive_electrode
    {
        type            zeroGradient;
    }
    negative_cc_tab
    {
        type            fixedValue;
        value           uniform 0;  // dummy value
    }
    positive_cc_tab
    {
        type            fixedValue;
        value           uniform 0;  // dummy value
    }
    walls_separator
    {
        type            zeroGradient;
    }
    walls_negative_cc
    {
        type            zeroGradient;
    }
    walls_positive_cc
    {
        type            zeroGradient;
    }
    walls_negative_electrode
    {
        type            zeroGradient;
    }
    walls_positive_electrode
    {
        type            zeroGradient;
    }
    negative_electrode_to_cc
    {
        type            zeroGradient;
    }
    negative_cc_to_electrode
    {
        type            zeroGradient;
    }
    positive_electrode_to_cc
    {
        type            zeroGradient;
    }
    positive_cc_to_electrode
    {
        type            zeroGradient;
    }
    negative_electrode_to_separator
    {
        type             donnanPotentialBaffleMixed;
        potentialNbr     electrolyte_potential;
        ionicSpeciesName H;
        value            uniform 0;
    }
    separator_to_negative_electrode
    {
        type             donnanPotentialBaffleMixed;
        potentialNbr     electrolyte_potential;
        ionicSpeciesName H;
        value            uniform 0;
    }
    positive_electrode_to_separator
    {
        type             donnanPotentialBaffleMixed;
        potentialNbr     electrolyte_potential;
        ionicSpeciesName H;
        value            uniform 0;
    }
    separator_to_positive_electrode
    {
        type             donnanPotentialBaffleMixed;
        potentialNbr     electrolyte_potential;
        ionicSpeciesName H;
        value            uniform 0;
    }
}



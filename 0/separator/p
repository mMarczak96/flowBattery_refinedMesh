FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/separator";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    #include "$FOAM_CASE/include/setConstraintTypes"

    walls_separator
    {
        type            fixedFluxPressure;
        gradient        uniform 0;
        value           uniform 0;
    }
    separator_to_negative_electrode
    {
        type            fixedFluxPressure;
        gradient        uniform 0;
        value           uniform 0;
    }
    separator_to_positive_electrode
    {
        type            fixedFluxPressure;
        gradient        uniform 0;
        value           uniform 0;
    }
}


